<% layout("layouts/boilerplate") %> 


<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-3 offset-md-3 col-xl-4 offset-xl-4">
           <div class="card shadow">
               <img class="card-img-top" src="https://images.unsplash.com/photo-1468245856972-a0333f3f8293?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTl8fGNhbXB8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1000&q=60" alt="">
               <div class="card-body">
                   <h5 class="card-title">Register</h5>
                   <form action="/register" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="username">Username</label>
                        <input class="form-control" type="text" id="username" name="username" required>
                    </div>
                
                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input class="form-control" type="email" id="email" name="email" required>
                    </div>
                
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                    </div>
                    <button class="btn btn-success btn-block">Register</button>
                </form>
                </div>
           </div> 
        </div>
    </div>
</div>

